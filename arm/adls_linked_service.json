{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "factoryName": {
      "type": "string",
      "defaultValue": "my-healthcare-adf"
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "healthcareadls0161"
    },
    "managedIdentityId": {
      "type": "string",
      "defaultValue": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', 'my-healthcare-adf')]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.DataFactory/factories/linkedservices",
      "apiVersion": "2018-06-01",
      "name": "[concat(parameters('factoryName'), '/ADLS_Link')]",
      "properties": {
        "type": "AzureDataLakeStorage",
        "typeProperties": {
          "url": "[concat('https://', parameters('storageAccountName'), '.dfs.core.windows.net/')]"
        },
        "connectVia": {
          "referenceName": "[parameters('managedIdentityId')]",
          "type": "IntegrationRuntimeReference"
        },
        "authentication": {
          "type": "ManagedIdentity",
          "resource": "[concat('https://', parameters('storageAccountName'), '.blob.core.windows.net/')]"
        }
      }
    }
  ]
}